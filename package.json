{
  "name": "@matthill8286/component-icon-library",
  "version": "1.0.0",
  "description": "A library that creates JSX / React components from SVGs",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/matthill8286/component-icon-library"
  },
  "author": "Matthew Hill",
  "main": "dist/index.js",
  "sideEffects": false,
  "module": "dist/index",
  "types": "dist/index",
  "files": [
    "/dist/**/*"
  ],
  "scripts": {
    "build": "yarn clean && BABEL_ENV=build NODE_ENV=production run-p build:babel generate:dts",
    "automate:build": "./scripts/build.sh && ./scripts/release.sh",
    "build:babel": "babel  src --out-dir dist --config-file ./babel.config.js --source-maps --extensions .ts,.tsx,.js --no-comments",
    "build:svg": "rimraf -rf ./src/components && UV_THREADPOOL_SIZE=64 babel-node --extensions .ts,.tsx,.js,.jsx --config-file ./babel.config.js ./build.ts && yarn build",
    "bump:patch": "npm version patch",
    "bump:minor": "npm version minor",
    "clean": "rimraf -rf ./dist/*",
    "generate:dts": "tsc --project tsconfig.build.json",
    "lint:fix": "eslint 'src/**/*.{js,jsx,ts,tsx}' --fix",
    "test": "jest",
    "test:watch": "yarn test --watch",
    "typecheck": "tsc"
  },
  "dependencies": {
    "react": "^16.13.1",
    "styled-components": "*"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.0.0",
    "@svgr/cli": "^5.4.0",
    "@svgr/core": "^5.4.0",
    "@types/async": "^3.2.3",
    "@types/fs-extra": "^9.0.1",
    "@types/mustache": "4.0.1",
    "@types/prettier": "^2.1.5",
    "@types/react": "^16.9.53",
    "@types/rimraf": "^3.0.0",
    "@types/styled-components": "^5.1.7",
    "@types/svgo": "^1.3.3",
    "@types/temp": "^0.8.34",
    "async": "^3.2.0",
    "babel-jest": "^26.6.3",
    "fs-extra": "^9.0.0",
    "glob": "^7.1.6",
    "mustache": "^4.0.1",
    "mustache-jest": "^1.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "regenerator-runtime": "^0.13.3",
    "standard-version": "^9.1.0",
    "svgo": "^1.3.2",
    "temp": "^0.9.0",
    "typescript": "4.1.3"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "release": {
    "branches": [
      "master"
    ]
  }
}
